extends layout 

block content 
  table  
   thead 
    th Name 
    th House 
    th Actor
    th
   tbody 
    each char in characterList 
     tr 
      td 
       a(href=`character/${char.id}`) #{char.name}
      td #{char.house}
      td #{char.actor}
      td
       form(action="/character-delete" method="post") 
        button(type="submit", name="id", value=`${char.id}`) Delete
